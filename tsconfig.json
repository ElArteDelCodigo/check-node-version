{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "outDir": "build",
    "isolatedModules": true,
    "typeRoots": ["src/types/index.d.ts", "./node_modules/@types"],
    "types": ["node", "jest"],
    "removeComments": true,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
